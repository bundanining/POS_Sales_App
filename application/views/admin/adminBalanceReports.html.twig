{% raw %}
<script id="admin-balance-reports-page" type="text/template">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Balances Report
            </div>
            <div class="panel-body">
                <form action="#/balance-reports" method="get">
                    <div class="form-group form-inline">
                        <label>To:</label>
                        <input type="date" class="input-sm form-control" name="start" value="{{ start }}" />
                        <label>From:</label>
                        <input type="date" class="input-sm form-control" name="end" value="{{ end }}"/>
                        <input type="submit" class="btn btn-primary" value="Filter" />
                    </div>
                </form>
                <div class="mtop10"></div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <th>Date</th>
                            <th>Cash In</th>
                            <th>Cash Out</th>
                            <th>Card In</th>
                            <th>Card Out</th>
                        </thead>
                        <tbody>
                        {{#reports}}
                            <tr>
                                <td>{{ date }}</td>
                                <td>${{ money_in }}</td>
                                <td>${{ cash }}</td>
                                <td>${{ cc_in }}</td>
                                <td>${{ creditcard }}</td>
                            </tr>
                        {{/reports}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</script>
{% endraw %}