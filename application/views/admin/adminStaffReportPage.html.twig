{% raw %}
<script id="admin-staff-report-page" type="text/template">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Staff Report
            </div>
            <div class="panel-body">
                <div style="float:left;">
                    <fieldset class="form-inline">
                        <label for="staff-select">Staff:</label>
                        <select id="staff-select" class="form-control" name="type">
                            {{#users}}
                            <option value="{{ id }}">{{ firstname }} {{ lastname }}</option>
                            {{/users}}
                        </select>
                    </fieldset>

                    <br /><br />

                    <button onclick="staff_report_export_csv('{{ staff }}');"><i class="icon-file"></i> <span>Export as csv</span></button>
                </div>

                <div style="float:right;font-size: 20px;padding-top: 20px;color: #000;font-weight: bold;">
                    Total: ${{ total }}
                </div>
                <div class="mtop10"></div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <th>Id</th>
                            <th>Date</th>
                            <th>Order Details</th>
                            <th>Amount</th>
                            <th>Payment Method</th>
                            <th>Type</th>
                        </thead>
                        <tbody>
                        {{#reports}}
                            <tr>
                                <td>{{ id }}</td>
                                <td style="white-space: nowrap">{{ date }}</td>
                                <td>{{{ contents }}}</td>
                                <td>${{ total }}</td>
                                <td>{{ payment_method }}</td>
                                <td>{{ status }}</td>
                            </tr>
                        {{/reports}}
                        </tbody>
                    </table>
                </div>
                <ul class="pagination">
                    {{#pages}}
                        {{#sel}}
                            <li class="active"><a href="javascript:void(0);">{{ pag }}</a></li>
                        {{/sel}}
                        {{^sel}}
                            <li><a href="{{ link }}">{{ pag }}</a></li>
                        {{/sel}}
                    {{/pages}}
                </ul>
            </div>
        </div>
    </div>
</script>
{% endraw %}