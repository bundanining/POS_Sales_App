{% raw %}
<script id="admin-tops-page" type="text/template">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                {{ title }}
            </div>
            <div class="panel-body">
                <fieldset class="form-inline">
                    <label for="top-select">Top:</label>
                    <select id="top-select" class="form-control" name="type" data-type="{{ selected_type }}">
                        <option value="10">10</option>
                        <option value="50">50</option>
                    </select>
                </fieldset>

                <br />

                <button onclick="tops_export_csv('{{ type }}','{{ perpag }}');"><i class="icon-file"></i> <span>Export as csv</span></button>
                <div class="mtop10"></div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Count</th>
                        </thead>
                        <tbody>
                        {{#have_data}}
                            {{#data}}
                            <tr>
                                <td>{{ id }}</td>
                                <td>{{ name }}</td>
                                <td>{{ count }}</td>
                            </tr>
                            {{/data}}
                        {{/have_data}}
                        {{^have_data}}
                            <tr>
                                <td colspan="8" style="text-align: center;"><em>no results</em></td>
                            </tr>
                        {{/have_data}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</script>
{% endraw %}
