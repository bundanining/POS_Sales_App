{% raw %}
<script id="admin-salesReports-page" type="text/template">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Sales Reports
            </div>
            <div class="panel-body">
                <div class="row">
                  <div class="pull-left col-md-3">
                      <button onclick="sales_report_export_csv('{{ type }}','{{ start }}','{{ end }}');"><i class="icon-file"></i> <span>Export as csv</span></button>

                      <br /><br />
                      <select id="select_order_type">
                          <option value="0">All</option>
                          {{#order_types}}
                          <option value="{{ id }}"{{#selected}} selected{{/selected}}>{{ name }}</option>
                          {{/order_types}}
                      </select>
                  </div>
                  <div class="col-md-6 text-center">
                    <div class="form-inline">
                      {{ #search }}<button type="submit" id="order_search_empty" class="btn btn-default btn-danger">X</button>{{ /search }}
                      <input type="text" class="form-control" placeholder="Search" value="{{ search }}">
                      <button type="submit" id="order_search" class="btn btn-default btn-primary">Search</button>
                    </div>
                  </div>
                  <div class="text-right col-md-3">
                      Total Cash: ${{ total_cash }}<br /><br />
                      Total Card: ${{ total_cc }}
                  </div>
                </div>
                <div class="mtop10"></div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Order Number</th>
                            <th>Date</th>
                            <th>Staff</th>
                            <th>Order Type</th>
                            <th>Order Details</th>
                            <th>Amount</th>
                            <th>Payment Method</th>
                            <th>Type</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#have_reports}}
                            {{#reports}}
                                <tr>
                                    <td>{{ id }}</td>
                                    <td>{{ order_code }}</td>
                                    <td>{{ date }}</td>
                                    <td>{{ username }}</td>
                                    <td>{{ order_type }}</td>
                                    <td>{{{ contents }}}</td>
                                    <td>${{ total }}</td>
                                    <td>{{ payment_method }}</td>
                                    <td>{{ status }}</td>
                                    <td><button class="btn btn-danger admin-salesReports-page-delete" data-id="{{ id }}">remove</button></td>
                                </tr>
                            {{/reports}}
                        {{/have_reports}}
                        {{^have_reports}}
                            <tr>
                                <td colspan="10" style="text-align: center;"><em>no results</em></td>
                            </tr>
                        {{/have_reports}}
                        </tbody>
                    </table>
                </div>
                <ul class="pagination">
                    {{#pages}}
                    {{#sel}}
                    <li class="active"><a href="javascript:void(0);">{{ pag }}</a></li>
                    {{/sel}}
                    {{^sel}}
                    <li><a href="{{ link }}">{{ pag }}</a></li>
                    {{/sel}}
                    {{/pages}}
                </ul>
            </div>
        </div>
    </div>
</script>
{% endraw %}